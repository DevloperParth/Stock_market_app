
<%= render "currencies/navbar"%>
  <p class="notice"><%= notice %></p>
<div class="d-flex">
<table class="table">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    </tr>
<% current_user.currencies.each do |data| %>
  <tr>
    <td><%= data.id %></td>  
    <td><%= data.name %></td>  
    <td><%= data.previous_price %></td>
    <td><b><%= link_to 'Sell', currencies_sell_path(id: data.id), :class=>"button primary fi-plus" %></b></td>
  </tr>
<% end %> 
  </tbody>
</table>
      
<table class="table">
  <thead>
    <tr>
      <th scope="col">Quantity</th>
    </tr>
  </thead>
  <tbody>
    </tr>
<% current_user.quantities.each do |q|%>
      <tr>
      <td><%= q.coin_quantity %></td>
      </tr>
  <% end %> 
  </tbody>
</table>
</div>